{
    "compilerOptions": {
        "typeRoots": ["node_modules/@types"],
        "target": "es2017",
        "module": "commonjs",
        "lib": [
            "es5",
            "es2015",
            "es2017",
            "dom",
            "scripthost"
        ],
        "rootDir": "./",
        "outDir": "build", 
        "preserveConstEnums": true, 
        "strictNullChecks": true, 
        "moduleResolution": "node", 
        "allowJs": true,
        "removeComments": true,
    },
    "include": [
        "./src/**/*",
        "./test/**/*"
    ],
    "exclude": [
        "./**/*.map.js",
    ]
}